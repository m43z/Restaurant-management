<Window x:Class="Restaurant_ManagementFull.InvoiceWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant_ManagementFull"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        FlowDirection="RightToLeft"
        Title="InvoiceWnd" Height="450" Width="800">
    <Grid>
    <DataGrid x:Name="DvgInvoice" AutoGenerateColumns="False">
      <DataGrid.Columns>
        <DataGridTextColumn Header="نام مشتری" Binding="{Binding Customer.FullName}" />
        <DataGridTextColumn Header="تاریخ فاکتور" Binding="{Binding Invoice.Date}"/>
        <DataGridTextColumn Header="مبلغ کل فاکتور" Binding="{Binding TotalPrice}"/>
      </DataGrid.Columns>
    </DataGrid>
    </Grid>
</Window>
